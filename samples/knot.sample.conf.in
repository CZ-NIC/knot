# This is a sample of a minimal configuration file for Knot DNS.
# See knot.conf(5) or refer to the server documentation.

server:
    rundir: "@run_dir@"
    user: knot:knot
    listen: [ 127.0.0.1@53, ::1@53 ]

control:
    listen: "knot.sock"

log:
  - target: syslog
    any: info

template:
  - id: default
    storage: "@storage_dir@"
    file: "%s.zone"
    dnssec-signing: false

zone:
#  - domain: example.com
